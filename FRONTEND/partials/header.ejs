<head>
    <link rel="stylesheet" href="/assets/css/header.css">
</head>
<header>
    <nav>
        <div class="nav-container">
            <a href="<%= hoster %>" class="logo">MonForum</a>
            <ul class="nav-links">
                <li><a href="/">Accueil</a></li>
                <li><a href="<%= hoster %>/categories">Catégories</a></li>
                <li><a href="<%= hoster %>/topics">Sujets</a></li>
                <li><a href="<%= hoster %>/about">À propos</a></li>
            </ul>
            <div class="auth-links">
                <% if (user) { %>
                    <span>Bienvenue, <%= user.username %></span>
                    <a href="<%= hoster %>/logout">Se déconnecter</a>
                <% } else { %>
                    <% if (!path.includes('login')) {  %>
                        <a href="<%= hoster %>/login">Se connecter</a>
                    <% } %>
                    <% if (!path.includes('register')) { %>
                        <a href="<%= hoster %>/register">S'inscrire</a>
                    <% } %>
                <% } %>
            </div>
        </div>
    </nav>
</header>