<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= topic.title %></title>
    <link rel="stylesheet" href="/assets/css/topic.css">
</head>
<body>
    <%- include('../partials/header', {user, hoster, path}) %>
    <main>
        <section class="topic-details">
            <h1><%= topic.title %></h1>
            <p><%= topic.description %></p>
        </section>

        <section class="posts">
            <h2>Messages</h2>
            <div class="posts-container">
                <% if (!posts || posts.length === 0) { %>
                    <p>Aucun message pour ce topic.</p>
                <% } else { %>
                    <% posts.forEach(post => { %>
                        <div class="post">
                            <h3><a href="/posts/<%= post.ID_Post %>"><%= post.Titre %></a></h3>
                            <p><%= post.Contenu %></p>
                            <span><%= post.Date_de_crÃ©ation %></span>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </section>

        <% if (user) { %>
        <section class="create-post">
            <h2>Ajouter un message</h2>
            <form action="/topics/<%= topic.ID_Topic %>/posts" method="POST">
                <div>
                    <label for="title">Titre :</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div>
                    <label for="content">Message :</label>
                    <textarea id="content" name="content" required></textarea>
                </div>
                <button type="submit">Poster</button>
            </form>
        </section>
        <% } %>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>
