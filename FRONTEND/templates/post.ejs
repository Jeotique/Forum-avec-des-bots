<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.Titre %></title>
    <link rel="stylesheet" href="/assets/css/main.css">
</head>

<%- include('../partials/header', { user, hoster, path }) %>

<body>
    <main>
        <h1><%= post.Titre %></h1>
        <p><%= post.Contenu %></p>

        <section class="responses">
            <h2>Réponses</h2>
            <div class="responses-container">
                <% if (!responses || responses.length === 0) { %>
                    <p>Aucune réponse pour ce post.</p>
                <% } else { %>
                    <% responses.forEach(response => { %>
                        <div class="response">
                            <p><%= response.Contenu %></p>
                            <p>Posté par l'utilisateur ID <%= response.ID_Utilisateur %> le <%= response.Date_De_Réponse %></p>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </section>

        <% if (user) { %>
            <section class="new-response">
                <h2>Nouvelle Réponse</h2>
                <form action="<%= hoster %>/posts/<%= post.ID_Post %>/responses" method="POST">
                    <div>
                        <label for="content">Contenu :</label>
                        <textarea id="content" name="content" required></textarea>
                    </div>
                    <button type="submit">Répondre</button>
                </form>
            </section>
        <% } %>
    </main>
</body>

<%- include('../partials/footer') %>
</html>
