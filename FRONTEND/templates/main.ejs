<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page d'accueil</title>
    <link rel="stylesheet" href="/assets/css/main.css">
</head>
<body>
    <%- include('../partials/header', {user, hoster, path}) %>
    <main>
        <section class="hero">
            <div class="hero-container">
                <h1>Bienvenue sur MonForum</h1>
                <p>Un forum pour discuter de tout et de rien</p>
            </div>
        </section>

        <section class="topics">
            <h2>Topics</h2>
            <div class="topics-container">
                <% if (!topics || topics.length === 0) { %>
                    <p>Aucun topic n'a été trouvé</p>
                <% } else { %>
                    <% topics.forEach(topic => { %>
                        <div class="topic">
                            <h3><a href="/topics/<%= topic.ID_Topic %>"><%= topic.title %></a></h3>
                            <p><%= topic.description %></p>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </section>

        <% if (user) { %>
        <section class="create-topic">
            <h2>Créer un nouveau topic</h2>
            <form action="/topics" method="POST">
                <div>
                    <label for="title">Titre :</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div>
                    <label for="description">Description :</label>
                    <textarea id="description" name="description" required></textarea>
                </div>
                <button type="submit">Créer</button>
            </form>
        </section>
        <% } %>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>
